{
  "name": "bokehboard-monorepo",
  "version": "0.0.1",
  "bin": {
    "bokehboard": "dist/index.js"
  },
  "files": ["dist/index.js"],
  "scripts": {
    "analyze": "turbo analyze",
    "boundaries": "turbo boundaries",
    "build": "turbo build",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system",
    "clean": "git clean -xdf node_modules",
    "dev": "turbo dev",
    "dx:down": "docker compose -f docker/development/compose.yaml down",
    "dx:init": "pnpm install && tsup && node dist/index.js init",
    "dx:up": "docker compose -f docker/development/compose.yaml up -d",
    "dx": "pnpm install && pnpm run dx:up && pnpm run migrate",
    "format": "ultracite format",
    "lint": "ultracite lint",
    "test": "turbo test",
    "translate": "turbo translate"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "2.2.3",
    "@bokehboard/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.6",
    "@types/node": "^24.3.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "ultracite": "^5.3.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.0"
  },
  "type": "module"
}
